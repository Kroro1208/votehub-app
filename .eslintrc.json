{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "react-refresh/only-export-components": "off"
  },
  "overrides": [
    {
      "files": [
        "src/context/**/*.tsx",
        "src/app/layout.tsx",
        "src/app/metadata.ts"
      ],
      "rules": {
        "react-refresh/only-export-components": "off"
      }
    }
  ]
}
